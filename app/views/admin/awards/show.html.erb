<h2>View award item</h2>

<%= simple_form_for @award, :url => admin_award_path(@award) do |f| %>

  <%= render :partial => 'admin/awards/form', :locals => { :f => f } %>

  <p class="submits">

  <% if @award.new_record? %>
    <%= link_to 'Cancel', admin_awards_path, :class => 'btn btn-mini btn-danger' %>
  <% else %>
    <%= link_to 'Cancel', admin_awards_path, :class => 'btn btn-mini btn-danger' %>
    <%= link_to fa_icon("trash", text: "Destroy"), admin_award_path(@award), method: :delete, class: 'btn btn-mini btn-danger pull-right', data: { confirm: "are you sure? it'll be gone forever" } %>
  <% end %>

  <%= f.submit "Save", :class => "btn btn-mini btn-primary" %>
  </p>

<% end %>
