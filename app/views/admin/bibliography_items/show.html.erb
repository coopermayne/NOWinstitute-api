<h2>View bibliography_item item</h2>

<%= simple_form_for @bibliography_item, :url => admin_bibliography_item_path(@bibliography_item) do |f| %>

  <%= render :partial => 'admin/bibliography_items/form', :locals => { :f => f } %>

  <p class="submits">

  <% if @bibliography_item.new_record? %>
    <%= link_to 'Cancel', admin_bibliography_items_path, :class => 'btn btn-mini btn-danger' %>
  <% else %>
    <%= link_to 'Cancel', admin_bibliography_items_path, :class => 'btn btn-mini btn-danger' %>
    <%= link_to fa_icon("trash", text: "Destroy"), admin_bibliography_item_path(@bibliography_item), method: :delete, class: 'btn btn-mini btn-danger pull-right', data: { confirm: "are you sure? it'll be gone forever" } %>
  <% end %>

  <%= f.submit "Save", :class => "btn btn-mini btn-primary" %>
  </p>

<% end %>
