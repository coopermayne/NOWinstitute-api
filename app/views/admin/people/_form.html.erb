<div class="row">

  <%= f.fields_for :roles do |builder| %>
    <%=  builder.object.position.title %>
  <% end %>


	<div class="col-lg-6">
		<%= f.input :name %>
	</div>
	<div class="col-lg-6">
		<%= f.input :email %>
	</div>

	<div class="col-lg-6">
		<%= f.input :birthday, html5: true %>
	</div>
	<div class="col-lg-6">
		<%= f.input :description %>
	</div>

	<div class="col-lg-3">
		<%= f.input :is_morphosis %>
	</div>
	<div class="col-lg-3">
		<%= f.input :is_employed %>
	</div>

	<div class="col-lg-3">
		<%= f.input :is_collaborator %>
	</div>
	<div class="col-lg-3">
		<%= f.input :is_consultant %>
	</div>

	<div class="col-lg-6">
    <%= f.input :start_date, html5: true %>
	</div>
	<div class="col-lg-6">
		<%= f.input :end_date, html5: true %>
	</div>

	<div class="col-lg-6">
		<%= f.input :website %>
	</div>
	<div class="col-lg-6">
		<%= f.input :location %>
	</div>

</div>
