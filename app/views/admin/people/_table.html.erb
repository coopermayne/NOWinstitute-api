<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Is morphosis", :is_morphosis %></th>
			<th><%= casein_sort_link "Is employed", :is_employed %></th>
			<th><%= casein_sort_link "Is collaborator", :is_collaborator %></th>
			<th><%= casein_sort_link "Is consultant", :is_consultant %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% people.each do |person| %>
		<tr>
			<td><%= casein_table_cell_link person.name, casein_person_path(person) %></td>
			<td><%= casein_table_cell_link casein_yes_no_label( person.is_morphosis ), casein_person_path(person) %></td>
			<td><%= casein_table_cell_link casein_yes_no_label( person.is_employed ), casein_person_path(person) %></td>
			<td><%= casein_table_cell_link casein_yes_no_label( person.is_collaborator), casein_person_path(person) %></td>
			<td><%= casein_table_cell_link casein_yes_no_label( person.is_consultant ), casein_person_path(person) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_person_path(person), :method => :delete, :data => { :confirm => "Are you sure you want to delete this person?" }) %>
			</td>
		</tr>
	<% end %>
</table>
