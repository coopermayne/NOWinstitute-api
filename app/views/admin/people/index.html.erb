<h2>People</h2>

<ul class="nav nav-tabs">
  <li role="presentation" class="<%= 'active' unless @type %>">
    <%= link_to "All", admin_people_path %>
  </li>

  <% @types.each do |type| %>
    <li role="presentation" class="<%= 'active' if @type==type  %>">
      <%= link_to type.to_s, admin_people_path(type: type) %>
    </li>
  <% end %>

  <form class="navbar-form navbar-right" role="search">
    <div class="form-group">
      <input type="text" class="form-control" placeholder="Search">
    </div>
    <button type="submit" class="btn btn-default btn-sm">Submit</button>
  </form>
</ul>

<%= render :partial => 'admin/people/table', :locals => { :people => @people } %>

<div class="text-center">
	<%= will_paginate @people %>
</div>
