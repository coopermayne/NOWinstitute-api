<h2>View person</h2>

<%= simple_form_for @person, :url => admin_person_path(@person) do |f| %>

  <%= render :partial => 'admin/people/form', :locals => { :f => f } %>

  <p class="submits">
  <%= link_to 'Cancel', admin_people_path, :class => 'btn btn-mini btn-danger' %>
  <%= f.submit "Save changes", :class => "btn btn-mini btn-primary" %>
  </p>

<% end %>
