<fieldset class="well">
  <%= f.hidden_field :_destroy %>
  <%= link_to "#{fa_icon "trash"}remove".html_safe, "#", class: "remove_fields" %>

  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :overview %>
  <%= f.input :author  %>
  <%= f.input :article_name %>
  <%= f.input :book_title   %>
  <%= f.input :subtitle     %>
  <%= f.input :publication  %>
  <%= f.input :publisher    %>
  <%= f.input :date %>
  <%= f.input :pub_date, html5:true %>
  <%= f.input :pages        %>
</fieldset>
