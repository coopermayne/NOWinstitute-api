<table class="table table-striped table-hover table-condensed table-bordered index-table">
	<thead>
		<tr>
      <th>rank</th>
      <th>title</th>
      <th>index image</th>
      <th>header image</th>
      <th>created</th>
      <th></th>
      <th></th>
		</tr>
	</thead>
	
	<% projects.each do |project| %>
		<tr>
      <td><%= project.rank.to_s %></td>
      <td><%= link_to project.title, admin_project_path(project) %></td>
      <td><%= project.index_image ? fa_icon("check", class: "pull-right", style: "color:green") : fa_icon("close", class: "pull-right", style: "color: red") %></td>
      <td><%= project.primary_image ? fa_icon("check", class: "pull-right", style: "color:green") : fa_icon("close", class: "pull-right", style: "color: red") %></td>
      <td><%= project.created_at.strftime("%m/%d/%Y") %></td>
      <td><%= link_to "#{fa_icon "pencil"}".html_safe, admin_project_path(project) %></td>
      <td><%= link_to "#{fa_icon "trash"}".html_safe, admin_project_path(project), data:  { method: "delete", confirm:  "Are you sure you want to delete this?" } %></td>
		</tr>
	<% end %>
</table>
