<fieldset class="well">
  <%= f.hidden_field :_destroy %>
  <%= link_to "#{fa_icon "trash"}remove".html_safe, "#", class: "remove_fields pull-right" %>

  <%= f.input :name, label: false %>
  <%= f.input :title, placeholder: "leave this empty and i'll make a title for you" %>
  <%= f.association :credit %>
  <%= f.association :file_type %>
  <%= f.input :copyright, value: false%>
  <%= f.input :in_gallery, value: false %>

</fieldset>
