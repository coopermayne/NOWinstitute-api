<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Created", :created_at %></th>
			<th><%= casein_sort_link "Type", :news_type_id %></th>
      <th><%= casein_sort_link "Primary Image", :primary_image, {unless: true} %></th>
      <th><%= casein_sort_link "NewsBox", :in_news_box, {unless: true} %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% news_items.each do |news_item| %>
		<tr>
			<td><%= casein_table_cell_link news_item.title, casein_news_item_path(news_item) %></td>
			<td><%= casein_table_cell_link news_item.created_at, casein_news_item_path(news_item) %></td>
			<td><%= casein_table_cell_link news_item.news_type ? news_item.news_type.title : nil , casein_news_item_path(news_item) %></td>
			<td><%= casein_table_cell_link casein_yes_no_label( news_item.primary_image ), casein_news_item_path(news_item) %></td>
			<td><%= casein_table_cell_link casein_yes_no_label( news_item.in_news_box ), casein_news_item_path(news_item) %></td>

			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_news_item_path(news_item), :method => :delete, :data => { :confirm => "Are you sure you want to delete this news item?" }) %>
			</td>
		</tr>
	<% end %>
</table>
