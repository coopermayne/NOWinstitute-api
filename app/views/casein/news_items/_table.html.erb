<!-- Scaffolding generated by Casein v5.1.1.5 -->

<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Title", :title %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th><%= casein_sort_link "Overview", :overview %></th>
			<th><%= casein_sort_link "Place name", :place_name %></th>
			<th><%= casein_sort_link "Street address", :street_address %></th>
			<th><%= casein_sort_link "Start date", :start_date %></th>
			<th>&nbsp;</th>
		</tr>
	</thead>
	
	<% news_items.each do |news_item| %>
		<tr>
			<td><%= casein_table_cell_link news_item.title, casein_news_item_path(news_item) %></td>
			<td><%= casein_table_cell_link news_item.description, casein_news_item_path(news_item) %></td>
			<td><%= casein_table_cell_link news_item.overview, casein_news_item_path(news_item) %></td>
			<td><%= casein_table_cell_link news_item.place_name, casein_news_item_path(news_item) %></td>
			<td><%= casein_table_cell_link news_item.street_address, casein_news_item_path(news_item) %></td>
			<td><%= casein_table_cell_link news_item.start_date, casein_news_item_path(news_item) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_news_item_path(news_item), :method => :delete, :data => { :confirm => "Are you sure you want to delete this news item?" }) %>
			</td>
		</tr>
	<% end %>
</table>