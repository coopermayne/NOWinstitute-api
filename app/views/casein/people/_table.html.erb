	</thead>
	
	<% people.each do |person| %>
		<tr>
			<td><%= casein_table_cell_link person.name, casein_person_path(person) %></td>
			<td><%= casein_table_cell_link person.birthday, casein_person_path(person) %></td>
			<td><%= casein_table_cell_link person.description, casein_person_path(person) %></td>
			<td><%= casein_table_cell_link person.email, casein_person_path(person) %></td>
			<td><%= casein_table_cell_link person.is_morphosis, casein_person_path(person) %></td>
			<td><%= casein_table_cell_link person.is_employed, casein_person_path(person) %></td>
			<td><%= casein_table_cell_link person.is_collaborator, casein_person_path(person) %></td>
			<td><%= casein_table_cell_link person.is_consultant, casein_person_path(person) %></td>
			<td><%= casein_table_cell_link person.start_date, casein_person_path(person) %></td>
			<td><%= casein_table_cell_link person.end_date, casein_person_path(person) %></td>
			<td><%= casein_table_cell_link person.website, casein_person_path(person) %></td>
			<td><%= casein_table_cell_link person.location, casein_person_path(person) %></td>
			<td class="delete">
				<%= link_to(casein_show_row_icon("trash"), casein_person_path(person), :method => :delete, :data => { :confirm => "Are you sure you want to delete this person?" }) %>
			</td>
		</tr>
	<% end %>
</table>