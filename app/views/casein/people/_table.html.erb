<table class="table table-striped table-hover table-condensed">
	<thead>
		<tr>
			<th><%= casein_sort_link "Name", :name %></th>
			<th><%= casein_sort_link "Birthday", :birthday %></th>
			<th><%= casein_sort_link "Description", :description %></th>
			<th><%= casein_sort_link "Email", :email %></th>
			<th><%= casein_sort_link "Is morphosis", :is_morphosis %></th>
			<th><%= casein_sort_link "Is employed", :is_employed %></th>
			<th><%= casein_sort_link "Is collaborator", :is_collaborator %></th>
			<th><%= casein_sort_link "Is consultant", :is_consultant %></th>
			<th><%= casein_sort_link "Start date", :start_date %></th>
			<th><%= casein_sort_link "End date", :end_date %></th>
