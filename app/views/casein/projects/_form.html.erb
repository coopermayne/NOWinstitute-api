<% f.object.getAllGalleries.each do |gallery_title, gallery| %>
  <h2><%= gallery_title %></h2>
  <div class="row">

    <% gallery.each_with_index do |image, i| %>
      <div class="col-md-4 col-lg-3">
        <div class="thumbnail">
          <%= image_tag image.name_url, class: "img-responsive" %>
          <div class="caption">
            <p><%= image.title %></p>
            <p><%= image.rank %></p>
            <p><%= image.isImage %></p>
            <p><%= image.in_gallery %></p>
            <p><a href="#" class="btn btn-danger" role="button">Delete</a></p>
          </div>
        </div>
      </div>
      <% if i%4 == 3 %>
        <div class="clearfix visible-lg"></div>
      <% elsif i%3 == 2 %>
        <div class="clearfix visible-md"></div>
      <% end %>
    <% end %>

  </div>
<% end %>
