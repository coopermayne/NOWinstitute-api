.menu-directive
  %ul.menu-directive-wrapper{ class: ( 'white-menu' if @white_menu ) }
    //- Build each big menu item and subsections
    - @menu[:sections].each do |bigMenuItem|
      %li.menu-section
        .section-title{ class: ('selected' if request.fullpath[bigMenuItem[:url]]) }
          %span.section-title-inner
            =bigMenuItem[:title]

        - if request.fullpath[bigMenuItem[:url]]
          .sorting-options
            - bigMenuItem[:sorting].each do |sortingOption|
              .sorting-option-wrapper
                .sorting-option-title-wrapper{ class:('selected' if sortingOption[:url] && request.fullpath[sortingOption[:url]]) }
                  .sorting-option-title
                    = sortingOption[:title]
